{
  "manifest_version": 3,
  "name": "EazyRuler",
  "short_name": "EazyRuler",
  "version": "1.0.0",
  "icons": {
    "128": "icons/icon-128x128.png",
    "48": "icons/icon-48x48.png",
    "16": "icons/icon-16x16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/w-component.js", "js/extension.js", "content.js"],
      "css": ["css/style.css"]
    }
  ],  
  "description": "A tool to measure elements",
  "homepage_url": "https://www.browserling.com/",
  "permissions": ["tabs", "activeTab", "storage", "contextMenus", "scripting"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_icon": {
      "19": "icons/icon-19x19.png",
      "38": "icons/icon-76x76.png"
    },
    "default_title": "EazyRuler"
  }
}




